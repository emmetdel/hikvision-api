{
  "name": "hikvision-toolkit",
  "version": "0.1.51",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/emmetdel/hikvision-toolkit"
  },
  "description": "a simple toolkit to connect and control some equipments of hikvision",
  "license": "MIT",
  "scripts": {
    "test": "jest --watchAll --detectOpenHandles",
    "build": "webpack",
    "build:prod": "webpack --production",
    "dev": "webpack && node dist/main.js",
    "prod": "NODE_ENV=production webpack && node dist/main.js"
  },
  "author": "Emmet Delaney",
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "webpack-node-externals": "^3.0.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/morgan": "^1.9.3",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.48.0",
    "webpack-cli": "^4.7.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/test/.jest.setup.js"
    ]
  }
}
